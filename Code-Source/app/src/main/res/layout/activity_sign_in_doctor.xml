<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignInVet">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <!-- <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="26dp"
                 android:layout_marginTop="40dp"
                 android:contentDescription="@string/welcomingIcon"
                 android:src="@drawable/sign_in_vet_1" />

         </LinearLayout>-->


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="end">

             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="end"
                 tools:ignore="UselessParent">

             </FrameLayout>

         </LinearLayout>
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="@drawable/identification_back"
         android:orientation="vertical">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="368dp"
                 android:layout_height="match_parent"
                 android:layout_marginStart="16dp"
                 android:layout_marginEnd="16dp"
                 android:gravity="center"
                 android:text="Merci de saisir vos informations pour vous inscrire."
                 android:textColor="@color/black"
                 android:textSize="22sp"
                 android:textStyle="bold" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:gravity="center">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:contentDescription="@string/welcome_back_icon"
                 android:src="@drawable/sign_in_doctor" />

         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:gravity="center">

             <EditText
                 android:id="@+id/inputEmail"
                 android:layout_width="300dp"
                 android:layout_height="60dp"
                 android:autofillHints="emailAddress"
                 android:background="@drawable/input_back"
                 android:gravity="center"
                 android:hint="@string/entrer_votre_email"
                 android:inputType="textEmailAddress" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:gravity="center">

             <EditText
                 android:id="@+id/password"
                 android:layout_width="300dp"
                 android:layout_height="60dp"
                 android:autofillHints="password"
                 android:background="@drawable/input_back"
                 android:gravity="center"
                 android:hint="@string/entrer_votre_mot_de_passe"
                 android:inputType="textPassword" />
         </LinearLayout>
         <FrameLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="16dp"
             android:animateLayoutChanges="true">

             <Button
                 android:id="@+id/signInButton"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center"
                 android:layout_marginLeft="20dp"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/getstarted_button"
                 android:text="@string/sign_in"
                 android:textAllCaps="false"
                 android:textColor="@color/white"
                 android:textSize="26sp"
                 android:textStyle="bold" />

             <ProgressBar
                 android:id="@+id/progressBar"
                 android:layout_width="16dp"
                 android:layout_height="16dp"
                 android:layout_gravity="center"
                 android:visibility="invisible">

             </ProgressBar>

         </FrameLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:gravity="center"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="350dp"
                 android:layout_height="wrap_content"
                 android:text="Si vous n'avez pas de compte, veuillez contacter votre administrateur !"
                 android:textSize="18sp" />

             <!--<Button
                 android:id="@+id/signUpButton"
                 style="?android:attr/borderlessButtonStyle"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@null"
                 android:text="@string/sign_up"
                 android:textAllCaps="false"
                 android:textColor="@color/getStartedColor"
                 android:textSize="20sp" />-->

        </LinearLayout>


    </LinearLayout>

</LinearLayout>